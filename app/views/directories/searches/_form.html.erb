<%= form_with model: @search, url: directories_search_path, scope: '', method: :get, data: {turbo_action: :replace} do |f| %>
  <%= f.label :term, class: "flex items-center text-fl-xs uppercase tracking-wide font-semibold mt-fl-lg mb-fl-3xs" do %>
    <%= icon :search, solid: true, class: "h-fl-sm w-fl-sm mr-fl-3xs -translate-y-[5%] text-grey-300 dark:text-grey-500" %>
    Search
  <% end %>
  <%= f.search_field :term, ui.text_input %>
<% end %>
