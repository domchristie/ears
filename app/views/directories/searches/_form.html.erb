<%= form_with model: @search, url: directories_search_path, scope: '', method: :get do |f| %>
  <%= f.label :term, class: "flex items-center text-fl-xs uppercase tracking-wide font-semibold dark:text-neutral-400 mt-fl-lg mb-fl-3xs" do %>
    <%= icon :search, solid: true, class: "h-fl-sm w-fl-sm mr-fl-3xs -translate-y-[5%] text-neutral-300" %>
    Search
  <% end %>
  <%= f.search_field :term, class: "block w-full bg-neutral-200 border-neutral-200 focus:bg-white" %>
<% end %>
