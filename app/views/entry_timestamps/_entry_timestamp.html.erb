<% if entry_timestamp.valid? %>
  <%= link_to(
    local_assigns[:text] || entry_timestamp,
    entry_player_at_time_path(entry_timestamp.entry, entry_timestamp.duration_in_seconds),
    data: {
      action: "player#skipToAndPlay:prevent",
      href: entry_timestamp.entry.enclosure_url
    },
    target: :player,
    tabindex: 0
  ) %>
<% else %>
  <%= local_assigns[:text] || entry_timestamp %>
<% end %>
