<% if entry_timestamp.valid? %>
  <%= link_to(
    entry_timestamp,
    entry_timestamp.url,
    data: {
      action: "player#skipToAndPlay:prevent",
      player_time_param: entry_timestamp.duration_in_seconds,
      player_controls_url_param: entry_player_path(entry_timestamp.entry),
      href: entry_timestamp.entry.enclosure_url
    },
    tabindex: 0
  ) %>
<% else %>
  <%= entry_timestamp %>
<% end %>
