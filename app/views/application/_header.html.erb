<% yield p = component_partial %>

<div class="relative h-64 w-full overflow-hidden">
  <div class="absolute inset-0">
    <div id="header_image" class="absolute inset-0 scale-150 transform-gpu bg-cover bg-top blur-lg" style="background-image: url('<%= image %>')"></div>
  </div>
</div>

<%= render "container", tag: :header do %>
  <div class="flex flex-col-reverse items-center mb-6 gap-4 text-center">
    <div class="space-y-1.5">
      <h1 class="text-2xl font-semibold"><%= title %></h1>
      <%= p.content_for :meta %>
    </div>

    <div
      data-turn-exit="<%= turn_exit_class_names %>"
      data-turn-enter="<%= turn_enter_class_names %>"
      class="relative mx-auto -mt-44 w-64 h-64 bg-white p-2.5 shadow"
    >
      <%= image_tag image, class: "w-full h-full object-cover", alt: "", width: 240, height: 240 %>
      <%= p.content_for :image_overlay %>
    </div>
  </div>
<% end %>
