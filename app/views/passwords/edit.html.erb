<% content_for :nav, render("nav") { render("back", path: settings_path) } %>

<h1 <%= tag.attributes(ui.heading_2, ui.turn, class: "mb-fl-2xs") %>>Change Password</h1>

<%= form_with(url: password_path, method: :patch) do |form| %>
  <%= render "form_errors", object: @user %>

  <div <%= ui.form_controls %>>
    <div>
      <%= form.label :current_password, nil, ui.label %>
      <%= form.password_field :current_password, ui.text_input.merge(required: true, autocomplete: "current-password") %>
    </div>

    <div>
      <%= form.label :password, "New password", ui.label %>
      <p class="text-xs">12 characters minimum</p>
      <%= form.password_field :password, ui.text_input.merge(required: true, autocomplete: "new-password") %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm new password", ui.label %>
      <%= form.password_field :password_confirmation, ui.text_input.merge(required: true, autocomplete: "new-password") %>
    </div>

    <%= form.submit "Update Password", ui.button %>
  </div>
<% end %>
