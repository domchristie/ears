<h1 <%= tag.attributes(ui.heading, ui.turn, class: "mb-fl-2xs") %>>Forgot Password?</h1>

<%= form_with url: passwords_path, scope: :user do |form| %>
  <%= form.label :email, nil, ui.label %>
  <%= form.email_field :email, ui.text_input.merge(required: true) %>
  <%= form.submit "Send Instructions", ui.button.merge(class: "mt-fl-xs")  %>
<% end %>
