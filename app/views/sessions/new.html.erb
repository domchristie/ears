<h1 <%= tag.attributes(ui.heading).merge(class: "mb-fl-2xs") %>>Log In</h1>

<%= form_with url: login_path, scope: :user do |form| %>
  <div class="space-y-fl-xs">
    <div>
      <%= form.label :email, nil, ui.label %>
      <%= form.email_field :email, ui.text_input.merge(required: true) %>
    </div>

    <div>
      <%= form.label :password, nil, ui.label %>
      <%= form.password_field :password, ui.text_input.merge(required: true) %>
    </div>

    <%= form.submit "Log In", ui.button %>
  </div>
<% end %>
