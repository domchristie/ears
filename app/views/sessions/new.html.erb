<header class="mb-fl-2xs">
  <h1 <%= tag.attributes(ui.heading, ui.turn) %>>Sign In</h1>
  <p><%= link_to "Forgot password?", new_identity_password_reset_path, class: "text-fl-xs underline" %></p>
</header>

<%= form_with url: sign_in_path do |form| %>
  <div <%= ui.form_controls %>>
    <div>
      <%= form.label :email, nil, ui.label %>
      <%= form.email_field :email, ui.text_input.merge(value: params[:email_hint], required: true, autocomplete: "email") %>
    </div>

    <div>
      <%= form.label :password, nil, ui.label %>
      <%= form.password_field :password, ui.text_input.merge(required: true, autocomplete: "current-password") %>
    </div>

    <%= form.submit "Sign In", ui.button %>
  </div>
<% end %>
