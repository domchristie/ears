<% content_for :nav, render("nav_bar") %>

<%= turbo_frame_tag :dashboard do %>
  <%= render "heading", tag_name: :h2 do %>
    <%= link_to "Recently Played", plays_path, data: {turbo_frame: "_top"} %>
  <% end %>
  <%= render "plays/episodes", episodes: @dashboard.played, more_feeds: @dashboard.more_played_feeds %>

  <%= render "heading", tag_name: :h2 do %>
    <%= link_to "Recently Updated", episodes_path, data: {turbo_frame: "_top"} %>
  <% end %>
  <%= render "episodes/episodes", episodes: @dashboard.recently_updated, more_feeds: @dashboard.more_recently_updated_feeds %>

  <%= render "heading", tag_name: :h2 do %>
    <%= link_to "Play Later", play_later_path, data: {turbo_frame: "_top"} %>
  <% end %>
  <%= render "play_later_playlists/episodes", episodes: @dashboard.play_later, more_feeds: @dashboard.more_play_later_feeds %>
<% end %>
