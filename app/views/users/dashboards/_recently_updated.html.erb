<%= render "feeds/cover", feed: feed, source: :recently_updated do %>
  <p class="flex items-center absolute bottom-1.5 left-1.5 whitespace-nowrap px-1.5 leading-5 bg-white/95 dark:bg-black/95 text-xs font-medium">
    <span class="sr-only">Updated on</span>
    <%= local_relative_time(
      feed.most_recent_entry.published_at,
      type: :"weekday-or-date",
      class: "capitalize"
    ) %>
  </p>

  <% if play = feed.most_recent_entry.most_recent_play_by(Current.user) %>
    <div class="flex items-center absolute top-1.5 left-1.5 whitespace-nowrap px-1.5 leading-5 bg-white/95 dark:bg-black/95 text-xs font-medium">
      <%= render "plays/play", play: play %>
    </div>
  <% end %>
<% end %>
