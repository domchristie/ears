<% @title = "Episodes" %>

<% content_for :nav do %>
  <%= render "respondable_nav", active_when: "heading:invisible" do %>
    <h1 class="truncate text-fl-sm font-semibold motion-safe:turn-enter:animate-enter-fade motion-safe:turn-exit:animate-exit-fade">Episodes</h1>
  <% end %>
<% end %>

<%= render("heading", data: {layout_target: "observable"}, id: "heading") { "Episodes" } %>

<%= turbo_frame_tag :episodes_frame do %>
  <%= render "episodes", episodes: @index.episodes %>
<% end %>
