<%= render "list_item", title: episode.title, path: entry_path(episode.entry), contain: true do |p| %>
  <% p.content_for :kicker, render("episodes/feed", feed: episode.feed) %>

  <div class="flex space-x-4 text-sm font-medium text-grey-500 dark:text-grey-400">
    <%= render "episodes/published_at", published_at: episode.published_at %>
    <%= render "plays/play", play: episode.play %>
  </div>

  <div class="space-y-fl-3xs">
    <%= render "episodes/description", episode: %>
    <%= render "episodes/actions", episode: %>
  </div>

  <% p.content_for :actions do %>
    <div class="flex h-full items-center justify-center">
      <%= render partial: "followings/form", locals: {following: episode.following}, variants: [:list_items] %>
    </div>
  <% end %>
<% end %>
