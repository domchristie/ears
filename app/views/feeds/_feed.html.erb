<%= render "list_item", title: feed.title, path: feed_path(feed) do |p| %>
  <% p.content_for :image do %>
    <div class="relative w-fl-2xl h-fl-2xl shrink-0 mr-fl-2xs before:absolute before:inset-0 before:ring-inset before:ring-1 before:ring-black/10 dark:before:ring-white/10">
      <% if feed.image_url %>
        <%= image_tag(ExternalImage.url(feed.image_url), alt: "", width: 96, height: 96, loading: :lazy)%>
      <% end %>
    </div>
  <% end %>

  <% if feed.author %>
    <div class="truncate text-grey-500 dark:text-grey-400"><%= feed.author %></div>
  <% end %>
<% end %>
