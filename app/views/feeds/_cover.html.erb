<article class="relative w-36 h-36 flex-shrink-0 snap-start last:snap-end">
  <%= link_to(
    image_tag(external_image_url(feed.image_url), alt: feed.title, width: 144, height: 144, loading: :lazy),
    feed_path(feed, source: local_assigns[:source]),
    class: "
      block
      relative
      before:absolute
      before:inset-0
      before:ring-inset
      before:ring-1
      before:ring-black/10
      dark:before:ring-white/10
    "
  ) %>
  <%= yield %>
</article>
