<%
padding = local_assigns[:padding] || "p-2"
size = local_assigns[:size] || "w-8 h-8"
%>

<%= render "plays/toggle", play: play, options: {class: ["flex bg-black/60 ring ring-white/20 focus-within:ring-white/75 rounded-full", padding, {"bg-black/20": play.nil?}]} do %>
  <%= inline_svg_tag "icons/play.svg", class: "block playing:hidden loading:hidden  #{size} mx-auto text-white translate-x-[2.5%]", title: "Play", aria: true %>
  <%= inline_svg_tag "icons/pause.svg", class: "hidden playing:block loading:hidden #{size} mx-auto text-white", title: "Pause", aria: true %>

  <span class="hidden loading:block mx-auto">
    <%= inline_svg_tag "icons/loading.svg", class: "loading:motion-safe:animate-spin #{size} text-white", title: "Loading", aria: true %>
  </span>
<% end %>
