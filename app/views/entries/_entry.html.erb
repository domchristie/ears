<%= render "list_item", title: entry.title, path: entry_path(entry) do %>
  <div class="flex space-x-3 text-neutral-600 text-[0.8125rem] font-mono">
    <%= local_relative_time entry.published_at, type: "date", class: "uppercase" %>

    <% if entry.itunes_episode %>
      <span class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-neutral-300" viewBox="0 0 20 20" fill="currentColor">
          <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
        </svg>
        <%= entry.itunes_season && "S#{entry.itunes_season}" %>
        <abbr class="ml-0.5 no-underline" title="Episode" aria-label="Episode">E</abbr><%= entry.itunes_episode %>
      </span>
    <% end %>

    <span class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-neutral-300" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
      </svg>
      <%= entry_duration(entry.duration) %>
    </span>
  </div>

  <div class="text-neutral-500 line-clamp-1 break-all">
    <%= strip_tags (entry.summary || entry.description).gsub("&nbsp;", " ") %>
  </div>
<% end %>
