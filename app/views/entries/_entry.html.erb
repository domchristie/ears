<%= render "list_item", title: entry.title, path: entry_path(entry), color: :accent, contain: true do %>
  <div class="flex space-x-4 text-sm font-medium text-grey-500 dark:text-grey-400">
    <div class="flex items-center">
      <%= icon :calendar, solid: true, class: "h-4 w-4 mr-1 text-grey-300 dark:text-grey-600 -translate-y-px" %>
      <%= local_relative_time entry.published_at, type: "date", class: "uppercase" %>
    </div>

    <%= render entry.play_by(user) %>
  </div>

  <div class="text-grey-500 dark:text-grey-400 line-clamp-1 break-all">
    <%= strip_tags (entry.summary || entry.description).to_s.gsub("&nbsp;", " ") %>
  </div>
<% end %>
