<input
  type="checkbox"
  data-player-target="played"
  data-href="<%= play.entry&.enclosure_url %>"
  class="peer hidden"
  <%= "checked" if play.complete? %>
>

<span class="<%= class_names("hidden peer-checked:flex items-center text-neutral-500") %>">
  <%= icon :"check-circle", solid: true, class: "h-4 w-4 -ml-px mr-1 text-teal-500" %>
  Played
</span>

<span class="<%= class_names("peer-checked:hidden flex items-center") %>">
  <%= render(
    "timer",
    progress: play.progress,
    options: {
      aria: {hidden: true},
      data: {player_target: "timerIcon", href: play.entry&.enclosure_url},
      class: "h-4 w-4 -ml-px mr-1 text-neutral-300"
    }
  ) %>

  <time
    data-player-target="remainingInWords"
    data-href="<%= play.entry&.enclosure_url %>"
    class="text-neutral-500",
    datetime="<%= ActiveSupport::Duration.build(play.remaining.round).iso8601 %>"
  >
    <%= play_remaining_in_words(play.remaining) %>
    <%= "left" unless play.new_record? %>
  </time>
</span>
